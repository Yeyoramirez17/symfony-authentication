{% extends 'layouts/auth.html.twig' %}

{% block title %}Reset your password!{% endblock %}

{% block page_title %}Symfony Reset Password{% endblock %}

{% block card_title %}Reset your password{% endblock %}

{% block card_content %}

    {% if form_errors(resetForm) %}
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
            {{ form_errors(resetForm) }}
        </div>
    {% endif %}

    {{ form_start(resetForm) }}

    {{ form_row(resetForm.plainPassword) }}

    <button type="submit" class="mt-4 w-full text-white bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
        Reset password
    </button>

    {{ form_end(resetForm) }}

{% endblock %}
